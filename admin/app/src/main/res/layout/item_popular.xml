<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    app:cardCornerRadius="16dp"

    android:layout_width="match_parent"
    android:layout_height="200dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@color/blueLat"
        android:elevation="8dp" >

        <ImageView
            android:id="@+id/image_pop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/redPunch"
            android:src="@drawable/ic_chu_i_tron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_pop"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@color/blueLat"
            android:gravity="center"
            android:text="cappuchino"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@id/image_pop"
            app:layout_constraintStart_toEndOf="@id/image_pop"
            app:layout_constraintTop_toTopOf="@id/image_pop"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/fee_pop"
            android:layout_width="202dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@color/blueLat"
            android:gravity="center"
            android:text="$Fee"
            android:textColor="@color/redPunch"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_pop"
            app:layout_constraintTop_toBottomOf="@id/name_pop" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>