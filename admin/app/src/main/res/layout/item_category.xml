<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    app:cardCornerRadius="16dp"
    android:layout_width="250dp"
    android:layout_height="230dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_gravity="center"
        android:elevation="8dp"

        android:layout_width="230dp"
        android:layout_height="210dp"
        android:background="@drawable/cat_background">

        <ImageView
            android:id="@+id/image_cate"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:background="@drawable/cat_background"
            android:src="@drawable/ic_chu_i_tron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />


        <TextView
            android:id="@+id/cate_name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/redPunch"
            android:gravity="center"
            android:text="name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintTop_toBottomOf="@id/image_cate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>