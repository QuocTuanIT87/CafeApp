<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPromoActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/redPunch"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@color/redPunch"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Thêm Mã Giảm Giá"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/trang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

   <EditText
       android:id="@+id/inputPromoCode"
       android:layout_below="@id/toolbar"
       android:layout_margin="5dp"
       android:hint="Nhập mã giảm giá"
       android:inputType="textCapWords"
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/inputPromoDes"
        android:layout_below="@id/inputPromoCode"
        android:layout_margin="5dp"
        android:hint="Nhập mô tả về mã giảm giá"
        android:inputType="textCapSentences|textMultiLine"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/inputPromoPrice"
        android:layout_below="@id/inputPromoDes"
        android:layout_margin="5dp"
        android:hint="Nhập số tiền giảm giá"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/inputPromoMinimumPrice"
        android:layout_below="@id/inputPromoPrice"
        android:layout_margin="5dp"
        android:hint="Nhập điều kiện để giảm giá"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/inputExpireDate"
        android:layout_below="@id/inputPromoMinimumPrice"
        android:layout_margin="5dp"
        android:hint="Ngày hết hạn"
        android:inputType="numberDecimal"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/baseline_calendar_today_24"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/addBtn"
        android:layout_below="@id/inputExpireDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:minWidth="150dp"
        android:text="Thêm"
        android:backgroundTint="@color/redPunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>