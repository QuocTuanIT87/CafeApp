<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_corner_16"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_16_top"
        android:gravity="center"
        android:padding="12dp"
        android:text="Chọn Thời Gian Thống Kê"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnStartDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/button"
                    android:text="Từ ngày"
                    android:textSize="14dp"
                    app:backgroundTint="@null"
                    app:icon="@android:drawable/ic_menu_today" />

                <TextView
                    android:id="@+id/txtStartDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnEndDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/button"
                    android:text="Đến ngày"
                    android:textSize="14dp"
                    app:backgroundTint="@null"
                    app:icon="@android:drawable/ic_menu_month" />

                <TextView
                    android:id="@+id/txtEndDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnThongKe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thống Kê"
                    android:background="@drawable/button_upload"
                    app:backgroundTint="@null"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            </TableRow>

        </TableLayout>


    </LinearLayout>
</LinearLayout>